<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./templates/head.ejs'); %>
</head>
   
<body class="container-fluid">

    <header>  <%- include('./templates/header'); %> </header>
    <a href="/">back to home</a>
    <div class="table-responsive">
    <table id="table" 
      class="table table-striped table-hover">
      <thead>
        <tr class="table-info">
            <th>Title</th>
            <th data-sortable="true">Released Date</th>
            <th>Genre</th>
            <th data-sortable="true">Duration</th>
            <th>Country</th>
            <th>Director</th>
         </tr>   
      </thead>   
      <tbody>
       <% data.forEach((movie)=>{ %>
             <tr>
                 <td><%=movie._source.title%></td>
                 <td><%=movie._source.date_published%></td>
                 <td><%=movie._source.genre%></td>
                 <td><%=movie._source.duration%></td>
                 <td><%=movie._source.country%></td>
                 <td><%=movie._source.director%></td>
             </tr>    
         <% }) %>   
        </tbody>  
    </table>  

 
</div>

 
<script>
    $(document).ready(function() {
          $('#table').DataTable();
    });
</script>

</body>
</html>